{
  "name": "fusionaura-ecommerce",
  "version": "1.0.0",
  "private": true,
  "description": "FusionAura - Sustainable Life, Timeless Remedies, Trusted Care",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "cd packages/db && prisma generate",
    "db:migrate": "cd packages/db && prisma migrate dev",
    "db:migrate:deploy": "cd packages/db && prisma migrate deploy",
    "db:seed": "cd packages/db && npm run seed",
    "db:create-admin": "cd packages/db && npm run create-admin",
    "db:studio": "cd packages/db && prisma studio",
    "postinstall": "prisma generate --schema=packages/db/prisma/schema.prisma",
    "docker:up": "cd infra && docker-compose up -d",
    "docker:down": "cd infra && docker-compose down",
    "docker:logs": "cd infra && docker-compose logs -f"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

